{
  "strategy": "calendar_spread",
  "version": "1.3",
  "enabled": true,
  "contract_selection": {
    "front_month": "current_quarter",  // 当季合约 
    "back_month": "next_quarter",      // 次季合约 
    "allowed_pairs": ["BTC", "ETH", "SOL"],
    "min_contract_size": {
      "BTC": 0.1,                      // 最小开仓量(BTC)
      "ETH": 1.0,
      "SOL": 10.0 
    }
  },
  "spread_conditions": {
    "normal_range": [0.005, 0.03],     // 合理价差范围(0.5%~3%)
    "entry_thresholds": {
      "contango": 0.025,               // 升水>2.5%时做空价差
      "backwardation": -0.015          // 贴水>1.5%时做多价差
    },
    "exit_thresholds": {
      "profit": 0.008,                 // 价差缩窄0.8%平仓
      "loss": -0.012                   // 价差扩大1.2%止损 
    }
  },
  "execution": {
    "order_type": "limit",
    "price_offset": {
      "bid_ask_spread": 0.001,         // 挂单偏离盘口1‰
      "time_decay_adjustment": true    // 考虑时间衰减 
    },
    "size_calculation": {
      "method": "volatility_weighted",
      "base_size": 0.2,                // 基础仓位20%
      "volatility_factor": 0.8         // 波动率调整系数 
    }
  },
  "risk_management": {
    "position_limits": {
      "max_spread_exposure": 0.4,      // 最大价差敞口40%
      "per_contract_limit": 0.15       // 单个合约≤15%
    },
    "margin_requirements": {
      "cross_margin": false,           // 强制使用逐仓 
      "isolated_ratio": 0.5            // 预留50%保证金
    },
    "auto_rollover": {
      "enabled": true,
      "days_before_expiry": 3          // 到期前3天移仓
    }
  },
  "monitoring": {
    "metrics": {
      "basis_monitor": {
        "interval": 300,               // 5分钟监控一次基差
        "prometheus": true
      }
    },
    "alert_rules": {
      "liquidity_warning": 0.002,      // 盘口价差>0.2%预警
      "expiry_reminder_days": [7, 3, 1] // 到期提醒 
    }
  },
  "backtest": {
    "historical_basis_data": "./data/basis_history/",
    "slippage_model": "time_weighted"
  }
}